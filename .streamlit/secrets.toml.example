# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your actual values

# ===== METHOD 1: CSV (Always works - no setup needed!) =====
# Submissions are automatically saved to contact_submissions.csv

# ===== METHOD 2: Email Notifications (Optional) =====
SMTP_SERVER = "smtp.gmail.com"
SMTP_PORT = 587
SENDER_EMAIL = "your-email@gmail.com"
SENDER_PASSWORD = "your-app-password"  # Use App Password for Gmail
RECEIVER_EMAIL = "shivammalviyawork@gmail.com"

# ===== METHOD 3: Google Sheets (Optional) =====
# Get URL from Google Apps Script Web App deployment
GOOGLE_SHEETS_URL = "https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"

# ===== METHOD 4: Formspree (Optional - Easiest for production) =====
# Get endpoint from https://formspree.io/
FORMSPREE_ENDPOINT = "https://formspree.io/f/YOUR_FORM_ID"
